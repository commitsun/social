<?xml version="1.0" encoding="utf-8" ?>
<odoo noupdate="1">
        <!-- Cron job to call the import_rss_feed method every day at 5 AM -->
        <record id="ir_cron_import_rss_feed" model="ir.cron">
            <field name="name">Import RSS Feed</field>
            <field name="model_id" ref="model_rss_source" />
            <field name="state">code</field>
            <field name="code">model.import_rss_feed()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field
            name="nextcall"
            eval="(DateTime.now() + relativedelta(hours=5)).replace(minute=0, second=0)"
        />
            <field name="active" eval="True" />
        </record>
</odoo>
